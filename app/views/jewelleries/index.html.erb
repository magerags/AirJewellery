
<br>
<h1 class="text-center gradient">Jewelleries</h1>
    <div class = "path">
    <%= form_tag jewelleries_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-path",
    placeholder: "Find a jewellery"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
<br>
</div>

<div class="row text-center mt-3">
    <div class="col">
    <% if @query %>
        <p style = "color:pink;">You searched for <strong><%= @query %></strong>. We found <%= @jewelleries.count %> jewelleries out of our <%= Jewellery.count %> on our website.</p>
      <% else %>
        <p style = "color:pink;">All <%= Jewellery.count %> jewelleries.</p>
      <% end %>
    </div>
  </div>
  <div class="container2">
   <div class="wrapper">
    <% @jewelleries.each do |jewellery| %>
    <%= link_to jewellery do%>
    <div class="card">
      <% if jewellery.photos.attached? %>
      <div class="card-image" style="background-image: url('<%= cl_image_path jewellery.photos.first.key, height: 200, width: 300, crop: :fill %>')"></div>
      <% else %>
         <div class="card-image2"><%= image_tag 'diamond_placeholder.png' %></div>
      <% end %>
      <div class="card-body">
          <h5 style=""><%= jewellery.name %></h5>
          <p class="ml-3 mt-1" style ="font-size: 20px;"> Â£<%= jewellery.price %></p>
      </div>
    </div>
    <% end %>
<% end %>
</div>
</div>
<div class="form-actions text-center mb-5">
  <h1 style="font-size: 60px;">
<%= link_to 'add your own here!', new_jewellery_path %>
  </h1>
</div>
